+        } else {
+            int index = STATUS_INDEX(id);
+            const char* name = NULL;
+            if (STATUS_ISCOMP(id)) {
+                UT_array* uicompstats = FcitxInstanceGetUIComplexStats(instance);
+                FcitxUIComplexStatus* compstatus = (FcitxUIComplexStatus*) utarray_eltptr(uicompstats, index);
+                if (compstatus) {
