+            dbus_message_iter_close_container(&sub, &ssub);
+        }
+        dbus_message_iter_close_container(&iter, &sub);
+
+        utarray_done(&ids);
+        fcitx_utils_free_string_hash_set(properties);
+    } while(0);
+
+    if (!reply) {
+        reply = FcitxDBusPropertyUnknownMethod(message);
+    }
+
+    return reply;
